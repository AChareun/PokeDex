{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true,
        "cypress/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:cypress/recommended",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "cypress",
        "jest"
      ],
    "rules": {
        "import/extensions": [
            "error",
            {
              "js": "always",
              "json": "sometimes"
            }
          ]
    }
}